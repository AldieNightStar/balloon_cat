func _ready():
	fly()

func _process(delta):
	var c = move_and_collide(Vector2(-speed, 0))
	if c:
		_atack(c.collider)
	
	
	
	if dead == true:
		position.y += 1
		rotation += 1

func fly():
	$AnimatedSprite.play(\"fly\")

func _atack(body):
	print(body.name)
	if body.has_method(\"damage\"):
		body.damage(1)
		self.add_collision_exception_with(body)
		
func damage(n):
	hp -= n
	if hp <= 0:
		dead = true

