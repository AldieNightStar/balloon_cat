[sub_resource type="GDScript" id=10]
script/source = "extends Node

var score = 0

signal score_updated(n)

func score_set(n):
	score = n
	if n < 0: n = 0
	score_update()

func score_get():
	return score

func score_add(n):
	score_set(score_get() + n)
	score_update()

func score_update():
	emit_signal(\"score_updated\", score)
"

