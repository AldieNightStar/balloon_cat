script/source = "extends Node2D

export var speed = 3
export var max_speed = 5
export var _score = 0

var _go = false
var _menu = false
var _cat_died = false

signal died()

func _ready():
	call_deferred(\"setup\")
	
func setup():
	$camera.current = true
	$cat.connect(\"died\", self, \"_cat_died\")
	$clayer/MenuButton.connect(\"pressed\", self, \"spawn_menu\", [true])
	
	# Setup joystick movement
	$clayer/Joystick.connect(\"on_change\", self, \"_global_joystick_change\")
	
	# Make joystick big if settings say that
	if G.gameData.get_joystick_is_big():
		$clayer/Joystick.global_position += Vector2(50, -50)
		$clayer/Joystick.scale = Vector2(1.75, 1.75)
		$clayer/Joystick.update_parent_pos()
		$clayer/Joystick.modulate.a = .25

func start():
	_go = true

func stop():
	_go = false

func _physics_process(delta):
	if _go:
		position.x += speed

func _cat_died():
	emit_signal(\"died\")
	_cat_died = true
	stop()
	spawn_menu()

func change_sling(sling: Node2D):
	$cat.change_sling(sling)

func score_add(n):
	$Score.score_add(n)

func score_get():
	return $Score.score_get()

func spawn_menu(closeable = false):
	if _menu: return
	_menu = true
	var cat_respawn_pos = $CatRespawnPos.global_position
	var menu = load(\"res://Objects/SubMenus/GameMenu.tscn\").instance()
	menu.global_position = Vector2(255, 25)
	menu.cat_respawn_pos = cat_respawn_pos
	menu.holder = self
	menu.closeable = closeable
	menu.coins_to_global = _cat_died
	menu.connect(\"closed\", self, \"_menu_closed\")
	menu.connect(\"rebirth\", self, \"_cat_reborn\")
	$clayer.add_child(menu)

func _menu_closed():
	_menu = false

func _cat_reborn():
	_cat_died = false
	_menu = false


func _on_Timer_timeout():
	if speed < max_speed:
		speed += 0.1

func _global_joystick_change(v):
	G.emit_signal(\"_on_joystick_change\", v)
"

