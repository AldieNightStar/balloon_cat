script/source = "extends KinematicBody2D

export var speed : int = 3

var hp = 1
var dead = false

func _ready():
	$Animated_goose.play(\"fly_goose\")

func _attack(body):
	if dead:
		return
	if body.has_method(\"damage\") and body.get(\"is_player\"):
		body.damage(1)
		self.add_collision_exception_with(body)

func destruct():
	queue_free()

func _physics_process(delta):
	if dead:
		position.y += 3
	var c = move_and_collide(Vector2(-1, 0))
	if c: 
		_attack(c.collider)

func damage(n):
	hp -= n
	if hp <= 0:
		dead = true

